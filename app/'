from app.render import render
from app.world.tile import Tile
from app.world.map import Map
from os import system
def clear():
    system('clear')
def run():
    init()
    loop()
def init():
    print("Welcome!")
def rend(map):
    clear()
    render.render(map)

def logic(map):
    ans = input()
    if ans == 'plant':
        map.plant()
    elif ans == 'grow':
        map.grow()
    elif ans == 'branchleft':
        map.branch('left')

def loop():
    l = 16;
    h = 16;
    map = Map(16,16)


    while(True):
        rend(map)
        logic(map)
